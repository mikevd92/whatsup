<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="quartz"/>
    <import resource="classpath:/toj/demo/whatsup/message/services/services.xml" />
    <import resource="classpath:/toj/demo/whatsup/email/services/services.xml" />
    <import resource="classpath:/toj/demo/whatsup/user/services/services.xml" />

    <bean id="complexJobDetail"    class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="quartz.RepeatedJob" />
        <property name="durability" value="true" />
        <property name="jobDataAsMap">
            <map>
                <entry key="messageService" value-ref="messageService" />
            </map>
        </property>
    </bean>

    <bean id="simpleTrigger"  class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="complexJobDetail" />
        <property name="startDelay" value="1000" />
        <property name="repeatInterval" value="60000" />
    </bean>

    <bean id="recoveryJobDetail"    class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="quartz.RecoveryJob" />
        <property name="durability" value="true" />
        <property name="jobDataAsMap">
            <map>
                <entry key="userService" value-ref="userService" />
            </map>
        </property>
    </bean>

   <bean id="recoveryTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="recoveryJobDetail" />
        <property name="startDelay" value="0" />
        <property name="repeatCount" value="0" />
    </bean>

    <bean id="deleteScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="schedulerName" value="DeleteScheduler"/>
        <property name="jobDetails">
            <list>
                <ref bean="complexJobDetail" />
            </list>
        </property>
        <property name="triggers">
            <list>
                <ref bean="simpleTrigger" />
            </list>
        </property>
        <property name="configLocation" value="classpath:quartz/delete-scheduler.properties" />

    </bean>

    <bean id="mailScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="schedulerName" value="MailScheduler"/>
        <property name="configLocation" value="classpath:quartz/mail-scheduler.properties" />
    </bean>

    <bean id="recoveryScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="schedulerName" value="RecoveryScheduler"/>
        <property name="configLocation" value="classpath:quartz/recovery-scheduler.properties" />
        <property name="jobDetails">
            <list>
                <ref bean="recoveryJobDetail"/>
            </list>
        </property>
        <property name="triggers">
            <list>
                <ref bean="recoveryTrigger" />
            </list>
        </property>
    </bean>


</beans>